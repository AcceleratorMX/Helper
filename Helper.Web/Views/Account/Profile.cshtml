@model ProfileViewModel

@{
    ViewBag.Title = "Профіль користувача";
}

<table>
    <thead>
    <tr>
        <th>Інформація про акаунт</th>
    </tr>
    </thead>
    <tbody>
    <tr>
        <th>Ім'я:</th>
        <td>@Model.Username</td>
    </tr>
    <tr>
        <th>Е-пошта:</th>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <th>Місто:</th>
        <td>@Model.City</td>
    </tr>
    <tr>
        <th>Дата реєстрації:</th>
        <td>@Model.RegisterDate.ToString("dd.MM.yyyy HH:mm")</td>
    </tr>
    @if (User.Identity!.IsAuthenticated)
    {
        <tr>
            <th>Дата останнього входу:</th>
            <td>@Model.LastLoginDate.ToString("dd.MM.yyyy HH:mm")</td>
        </tr>
    }
    <tr>
        <th>Завдань створено:</th>
        <td>@Model.CreatedJobs</td>
    </tr>
    <tr>
        <th>Завдань прийнято:</th>
        <td>@Model.AcceptedJobs</td>
    </tr>
    <tr>
        <th>Завдань виконано:</th>
        <td>@Model.CompletedJobs</td>
    </tr>
    <tr>
        <th>Завдань відмінено:</th>
        <td>@Model.FailedJobs</td>
    </tr>
    </tbody>
</table>

<h3>Змінити інформацію</h3>

<h4>Змінити електронну адресу та місто</h4>
<form asp-action="UpdateProfile" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Email">Електронна адреса:</label>
        <input asp-for="Email" type="email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="City">Місто:</label>
        <input asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Зберегти</button>
    @if (TempData["SuccessMessage"] != null)
    {
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
    }
</form>

<h4>Змінити пароль</h4>
<form asp-action="UpdatePassword" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="OldPassword">Старий пароль:</label>
        <input type="password" asp-for="OldPassword" class="form-control" />
        <span asp-validation-for="OldPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password">Новий пароль:</label>
        <input type="password" asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RepeatPassword">Повторіть новий пароль:</label>
        <input type="password" asp-for="RepeatPassword" class="form-control" />
        <span asp-validation-for="RepeatPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Змінити пароль</button>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }
</form>


