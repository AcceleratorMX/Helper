@model Helper.Web.Models.AccountModels.LoginViewModel

@{
    ViewData["Title"] = "Вхід";
}

<div class="login-page_container">
    <form asp-action="Login" method="post" class="form_container">
        @Html.AntiForgeryToken()
        <h2 class="login_title">Вхід</h2>
        <div class="input_container">
            <label asp-for="Username" class="input_label">Логін</label>
            <input asp-for="Username" class="input_field" placeholder="Введіть ім'я користувача (логін)"/>
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <hr class="card_line">
        <div class="input_container">
            <label asp-for="Password" class="input_label">Пароль</label>
            <input asp-for="Password" type="password" class="input_field" placeholder="Введіть пароль"/>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <hr class="card_line">
        <div class="form-button_container">
            <button type="submit" class="form_button-submit login_button">Вхід</button>
        </div>
        <span class="login-page_text">
            Не зареєстровані?
            <a asp-controller="Account" asp-action="Register" class="login-page_link">Зареєструватись</a>
        </span>
    </form>
</div>