@model IEnumerable<Job>

<ul class="list-group">
    @foreach (var job in Model)
    {
        <li class="list-group-item">
            <h5>@job.Title</h5>
            <p>@job.Description</p>
            <p><strong>Статус:</strong> @job.Status.GetDisplayName()</p>
            @if (job.Status == "InProgress")
            {
                <form asp-action="ConfirmCompletion" method="post">
                    <input type="hidden" name="id" value="@job.Id" />
                    <input type="submit" value="Підтвердити завершення" class="btn btn-success" />
                </form>
                <form asp-action="CancelJob" method="post">
                    <input type="hidden" name="id" value="@job.Id" />
                    <input type="submit" value="Відхилити виконання" class="btn btn-danger" />
                </form>
            }
        </li>
    }
</ul>